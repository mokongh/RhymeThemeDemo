<UserControl
    x:Class="RhymeThemeDemo.View.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RhymeThemeDemo.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="24" Orientation="Vertical">
        <TextBlock
            Margin="0,32,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource Md-Sys-TypeScale-Display-Large}"
            Text="你好！欢迎使用 Rhyme!" />
        <TextBlock
            Margin="0,24,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource Md-Sys-Typescale-Body-Medium}"
            Text="Rhyme 是根据 Material You 而设计的 UI框架，但它并不完全遵循 Material You 规范。&#x0a;&#x0d;你可以使用它构建美观、实用的 WPF 界面。" />
    </StackPanel>
</UserControl>
